@model TaxonomyPrj2.ViewModels.IndexInformationViewModel
@{
}

<h1>Информация</h1>

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Количесто образцов от</span>
    </div>
    <input type="text" id="SearchCountFromOrganism" class="form-control SearchCountFromOrganism" value="1" placeholder="" aria-label="empty" aria-describedby="basic-addon1 ">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">до</span>
    </div>
    <input type="text" id="SearchCountToOrganism" class="form-control SearchCountToOrganism" value="12" placeholder="" aria-label="empty" aria-describedby="basic-addon1 ">

</div>

<span class="input-group-text" id="basic-addon1">Дата начала исследований:</span>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">От</span>
    </div>
    <input type="date" class="form-control SearchDateFromOrganism" id="SearchDateFromOrganism" value="12.08.1911" placeholder="">

    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">до</span>
    </div>
    <input type="date" class="form-control SearchDateToOrganism" id="SearchDateToOrganism" value="14.11.2017" placeholder="">
</div>


<button type="button" id="startSeach" class=" btn btn-outline-success btn-lg btn-block ">Применить фильтр</button>

<br>
<div id="resultTable">

    <table class="table-bordered table-striped table-success">
        <thead>
            <tr>
                <th>ID орг</th>
                <th>Имя орг</th>
                <th>Кол обр</th>
                <th>Начало иссл</th>
                <th>Описание орг</th>
                <th>ID кат</th>
                <th>Прист имя кат</th>
                <th>Имя кат</th>
                <th>Описание кат</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Info)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NameOrganism</td>
                    <td>@item.CountSample</td>
                    <td>@(item.StartResearch.Day + "." + item.StartResearch.Month + "." + item.StartResearch.Year)</td>
                    <td>@item.DescriptionOrganism</td>
                    <td>@item.CategoryId</td>
                    <td>@item.NameCat</td>
                    <td>@item.NameCategory</td>
                    <td>@item.DescriptionCategory</td>
                </tr>
            }
        </tbody>
    </table>

</div>


@section Scripts
{
    <script src="~/js/information.js" asp-append-version="true"></script>
}
