

@model IEnumerable<TaxonomyPrj2.ViewModels.UserEditViewModel>

@{
    Layout = null;
}


<table class="table-bordered">
    <thead>
        <tr>
            <th>Логин</th>
            <th>E-mail</th>
            <th align="center">Год начала исследований</th>
            <th>Роль</th>
            <th>Редактировать</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.EMail</td>
                <td align="center">
                    @user.Year
                </td>
                <td>
                    @user.Role
                </td>
                <td>
                    <div class="btn-group">

                        <button type="button" data-id="@user.Login" class="redactUser btn btn-outline-warning  ">Редактировать</button>
                        <button type="button" data-id="@user.Login" data-active="@User.Identity.Name" class="deleteUser btn btn-outline-danger  ">Удалить</button>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

